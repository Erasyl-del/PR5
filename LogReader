import java.io.BufferedReader;
import java.io.FileReader;

public class LogReader {

    public static void read(String filePath, LogLevel minLevel) {
        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {

            String line;
            while ((line = br.readLine()) != null) {
                if (line.contains("[" + minLevel + "]")
                        || (minLevel == LogLevel.INFO && line.contains("[WARNING]"))
                        || (minLevel == LogLevel.INFO && line.contains("[ERROR]"))
                        || (minLevel == LogLevel.WARNING && line.contains("[ERROR]"))) {

                    System.out.println(line);
                }
            }

        } catch (Exception e) {
            System.out.println("Read error: " + e.getMessage());
        }
    }
}
